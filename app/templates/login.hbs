<section id="login-page" class="view--wrapper">
  <div class="sign-in--wrapper">
    {{#if session.isAuthenticated}}
      <h2>You're Signed In!</h2>
    {{else}}
      <h2>Sign In</h2>
      <p>If you want to contribute, sign in and add your project or just add projects you know about.</p>
      <button
        class="button login--sign-in -facebook-sign-in"
        {{action "signIn" "facebook"}}>
        {{fa-icon 'facebook-square'}}
        Sign In with Facebook
      </button>
      <button
        class="button login--sign-in -twitter-sign-in"
        {{action "signIn" "twitter"}}>
        {{fa-icon 'twitter-square'}}
        Sign In with Twitter
      </button>
      <button class="button login--sign-in" {{action "showSignIn"}}>
        {{fa-icon 'envelope'}}
        Sign In
      </button>
      {{#if showEmailSignIn}}
      <form>
        <h2>Email Sign In</h2>
        <div class="form-input--wrapper">
          <label for="email">Email:</label>
          {{input
            type="text"
            placeholder="Your Email address"
            value=model.email
            id="email"
          }}
        </div>
        <div class="form-input--wrapper">
          <label for="password">Password:</label>
          {{input
            type="password"
            value=model.password
            id="password"
          }}
        </div>
        {{#link-to 'forgot-password' class="login--forgot-password"}}Forgot your password?{{/link-to}}
        <br />
        <button class="button" {{action "signInEmailPassword" model}}>
          Sign in
        </button>
      </form>
      {{/if}}
    {{/if}}
  </div>
</section>
