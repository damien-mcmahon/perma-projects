<section class="view--wrapper" id="index-page">
  {{#search-box
    search=(action "onSearch")
    searching=(mut isSearching)
    results=(mut searchResults)
    onSelect=(action "selectAddress")
  }}{{/search-box}}

  {{#leaflet-map
    lat=mapLocation.lat
    lng=mapLocation.lng
    zoom=this.zoomLevel}}
    {{tile-layer url=selectedStyle.url}}
    {{#each model.projects as |project|}}
      {{#marker-layer lat=project.lat lng=project.lng }}
        {{#project-descriptor project=project}}
        {{/project-descriptor}}
      {{/marker-layer}}
    {{/each}}
  {{/leaflet-map}}
</section>
