<header class="app--header">
  <div class="header--content-wrapper">
    <div class="app--header--name-wrapper">
      <img
        class="app--header--logo"
        src="images/world-in-our-hands.svg"
        alt="perma project logo" />
      <div class="app--header--title-wrapper">
        <h1 class="app--header--name">
          {{#link-to "index"}}Perma Projects{{/link-to}}
        </h1>
        <h2 class="app--header--subtitle">
          Permaculture Projects from around the world
        </h2>
      </div>
    </div>
    <nav class="app--header--nav">
      {{#link-to "about" class="app--header--nav-link"}}About{{/link-to}}
      {{#if session.isAuthenticated}}
        {{#user-button user=session.currentUser signOut=(action 'signOut')}}{{/user-button}}
      {{else}}
      <button
        class="button app--header--sign-in"
        {{action "signIn" "facebook"}}>
        Sign in with Facebook
      </button>
      {{/if}}
      {{#facebook-like class="app--header--facebook-like"}}{{/facebook-like}}
    </nav>
  </div>
</header>
<main class="app--main">
  {{outlet}}
</main>
<footer></footer>
